# E-Procurement Vendor Portal - Backend Integration Environment Variables

# API Configuration - eproc-sourcing-backend
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# File Upload Configuration
NEXT_PUBLIC_UPLOAD_URL=http://localhost:8080/uploads
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Security Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3001

# External Services (if needed)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Database Configuration (if using client-side database features)
# DATABASE_URL=your-database-connection-string

# Monitoring & Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Development/Debug Settings
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_SHOW_API_ERRORS=true

# CORS Settings (for development)
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8080